<%= form_for(chat_message, remote: true) do |f| %>

  <div class="field form-group">
    <%= f.text_area :message, rows: "3", autofocus: "on", autocomplete: "off", class: "form-control", placeholder: "Type your message..." %>
  </div>

  <div class="actions">
    <%= f.submit "Send", class: "btn btn-success message-btn" %>
  </div>
<% end %>
