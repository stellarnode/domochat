<p id="notice"><%= notice %></p>

<h1>Payment Requests</h1>

<table class="table">
  <thead>
    <tr>
      <th>Receiver</th>
      <th>Project</th>
      <th>Full Description</th>
      <th>Sum</th>
      <th>Request ID</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.receiver %></td>
        <td><%= payment.formcomment %></td>
        <td><%= payment.targets %></td>
        <td><%= payment.sum %></td>
        <td><%= payment.label %></td>
        <td><%= payment.comment %></td>
        <td><%= link_to 'Donate', payment_donate_path(payment) %></td>

        <% if payment.user == current_user %>

          <td><%= link_to 'Show', payment %></td>
          <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
          <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>

        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Payment', new_payment_path, class: "btn btn-lg btn-primary" %>
